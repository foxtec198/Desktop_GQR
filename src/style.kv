<Login>
    name: 'login'
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        MDFloatLayout:
            size_hint_min_x: 300
            FitImage:
                source: 'src/logoLogin.png'
                size_hint: None, None
                size: 290, 300
                padding: 10
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
        MDFloatLayout:
            size_hint_min_xy: 200
            MDLabel:
                text: "Gerador QR"
                halign: 'center'
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
            MDTextField:
                id: server
                icon_left: 'server-security'
                hint_text: 'Server'
                helper_text: 'Ex: 10.10.1.10'
                input_type: 'number'
                pos_hint: {'center_x': 0.5,'center_y': 0.75}
                size_hint: .8, None
            MDTextField:
                id: user
                icon_left: 'badge-account'
                hint_text: 'Usuário'
                helper_text: 'Gerador.QR'
                input_type: 'number'
                pos_hint: {'center_x': 0.5,'center_y': 0.6}
                size_hint: .8, None
            MDTextField:
                id: pwd
                icon_left: 'key-chain'
                hint_text: 'Senha'
                password:True
                pos_hint: {'center_x': 0.5,'center_y': 0.45}
                size_hint: .8, None
            MDIconButton:
                icon: 'eye'
                theme_text_color: 'Hint'
                pos_hint: {'center_x': 0.85,'center_y': 0.45}
                on_release:
                    self.icon = 'eye-off' if self.icon == 'eye' else 'eye'
                    pwd.password = False if pwd.password == True else True
            MDSwitch:
                id: slvUser
                pos_hint: {'center_x': .2,'center_y': 0.35}
            MDLabel:
                text: 'Salvar Usuário'
                halign: 'center'    
                pos_hint: {'center_x': 0.5,'center_y': 0.35}
            
            MDRoundFlatIconButton:
                text: "Login"
                icon: "login-variant"
                pos_hint: {'center_x': 0.5,'center_y': 0.25}
                size_hint: .8, None
                on_release:
                    app.login()
            MDRoundFlatIconButton:
                text: "Como Usar"
                icon: "youtube"
                pos_hint: {'center_x': 0.5,'center_y': 0.15}
                size_hint: .8, None
                on_release: app.yt()

<MainWin>:
    name: 'mainwin'
    BoxLayout:
        orientation: 'vertical'
        # TOP
        FloatLayout:
            padding: 20
            size_hint_min_y: 10
            size_hint_max_y: 40
            MDIconButton:
                icon: 'arrow-left-circle'
                theme_text_color: 'Hint'
                pos_hint: {'center_x': 0.030,'center_y': 0.45}
                on_release:
                    app.root.current = 'login'
                    
        BoxLayout:
            orientation: 'horizontal'
            spacing: 10
            padding: 30
            # Items Gerador
            MDCard:
                size_hint_min_x: 300
                MDFloatLayout:
                    FitImage:
                        source: 'src/qr.png'
                        size_hint: None, None
                        size: 100, 100
                        padding: 10
                        pos_hint: {'center_x': 0.5,'center_y': 0.8}
                    MDTextField:
                        id: numCR
                        icon_left: 'office-building-marker'
                        hint_text: 'Numero do CR'
                        helper_text: 'Ex: 13223'
                        input_type: 'number'
                        pos_hint: {'center_x': 0.5,'center_y': 0.6}
                        size_hint: .5, None
                    MDTextField:
                        id: numNivel
                        icon_left: 'waves-arrow-up'
                        hint_text: 'Nivel do CR'
                        helper_text: 'Caso queira o CR todo, deixe em branco'
                        input_type: 'number'
                        pos_hint: {'center_x': 0.5,'center_y': 0.45}
                        size_hint: .5, None
                    MDRoundFlatIconButton:
                        text: "Gerar"
                        icon: "qrcode"
                        pos_hint: {'center_x': 0.5,'center_y': 0.3}
                        size_hint: .6, None
                        on_release:
                            app.gerar()

                    MDRoundFlatIconButton:
                        text: "Abrir Pasta"
                        icon: "folder-account-outline"
                        pos_hint: {'center_x': 0.5,'center_y': 0.2}
                        size_hint: .6, None
                        on_release:
                            app.abrirPasta()
                    
                    MDRoundFlatIconButton:
                        text: "Reportar Bugs"
                        icon: "github"
                        pos_hint: {'center_x': 0.5,'center_y': 0.1}
                        size_hint: .6, None
                        on_release:
                            app.github()
            # Modelo 
            MDCard:
                MDBoxLayout:
                    orientation: 'vertical'
                    padding: 50
                    FloatLayout:
                        FitImage:
                            id: modelo
                            source: 'src/modeloTrad.png'
                            size_hint: None, None
                            size: 130, 200
                            pos_hint: {'center_x': .5,'center_y': .5}
                    MDFloatLayout:
                        pos_hint: {'center_x': .5,'center_y': .5}
                        padding: 20
                        spacing: 20
                        MDTextButton:
                            id: c1
                            text: 'Grupo GPS'
                            pos_hint: {'center_x': .2,'center_y': .6}
                            on_release:
                                app.modelo('modeloTrad')
                                modelo.source = 'src/modeloTrad.png'
                        MDTextButton:
                            text: 'PoliService'
                            pos_hint: {'center_x': .2,'center_y': .45}
                            on_release:
                                app.modelo('modeloPoli')
                                modelo.source = 'src/modeloPoli.png'
                        MDTextButton:
                            text: 'Force'
                            pos_hint: {'center_x': .2,'center_y': .3}
                            on_release:
                                app.modelo('modeloForce')
                                modelo.source = 'src/modeloForce.png'

                        MDTextButton:
                            text: 'OnSeg'
                            pos_hint: {'center_x': .75,'center_y': .6}
                            on_release:
                                app.modelo('modeloOnseg')
                                modelo.source = 'src/modeloOnSeg.png'
                        MDTextButton:
                            text: 'Top Service'
                            pos_hint: {'center_x': .75,'center_y': .45}
                            on_release:
                                app.modelo('modeloTop')
                                modelo.source = 'src/modeloTop.png'
                        MDTextButton:
                            text: 'Minimalista'
                            pos_hint: {'center_x': .75,'center_y': .3}
                            on_release:
                                app.modelo('modeloMini')
                                modelo.source = 'src/modeloMini.png'

                        
